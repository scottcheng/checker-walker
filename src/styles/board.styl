#board-section
  flex-direction column

  #board
    margin 20px 0

  #border
    stroke gray-light
    fill none
  .grid
    stroke gray-light

  .piece
    fill lighten(blue, 15%)
  .piece-shadow
    fill blue
    transform translateY(2px)

  .arrow
    font-family 'icomoon'
    fill gray-lighter
    transition fill .25s
    &.visited
      fill yellow
    &.active
      fill green

  .msg
    center-align()
    padding 0 20px
    border-radius 2px
    height 0
    opacity 0
    transform translateY(20px)
    transition height .25s .25s, opacity .25s, transform .25s
    color #fff
    &.loop
      background green
    &.off
      background red
  &.finished
    .msg
      transition height .25s, opacity .25s .25s, transform .25s .25s
    &.loop
      .msg.loop
        height 50px
        opacity 1
        transform translateY(0)
      .arrow.visited
        fill green
    &.off
      .msg.off
        height 50px
        opacity 1
        transform translateY(0)
      .arrow.visited
        fill red
