center-align()
  display flex
  align-items center
  justify-content center

btn(color)
  border-radius 2px
  text-align center
  user-select none
  cursor pointer
  background color
  color #fff
  box-shadow 0 2px darken(color, 15%)
  overflow hidden
  transition background .25s, opacity .25s
  &:hover
    background lighten(color, 15%)
  &:active
    box-shadow none
    transform translateY(2px)
