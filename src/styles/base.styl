*, *:before, *:after
  box-sizing border-box

html, body
  margin 0
  padding 0

html, body
  height 100%

body
  font-size 16px
  font-family Lato, sans-serif
  color gray-dark

  display flex
  min-width 800px

.section
  center-align()

#sidebar
  width 240px
  border-right 1px solid gray-lighter
  background gray-bg
  position relative

#board-section
  flex 1

#footer
  absolute bottom 20px left
  width 100%
  text-align center
  a
    color gray-light
    font-style italic
    text-decoration none
